<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailProductActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_products"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/gb" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Al Fateh,Anex,Small"
                android:padding="3dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:id="@+id/txt_nameProduct"
                android:layout_below="@+id/img_products"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anex Iron"
                android:padding="3dp"
                android:textSize="18dp"
                android:visibility="gone"
                android:layout_below="@+id/txt_nameProduct"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/txt_nameWithCategory"
                />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_products"
                android:text="Price :"
                android:textColor="#000"
                android:padding="2dp"
                android:visibility="gone"
                android:textStyle="bold"
                android:id="@+id/txt_priceProduct"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_nameWithCategory"
                android:text="2000"
                android:textColor="#000"
                android:padding="2dp"
                android:background="@drawable/crosstext"
                android:id="@+id/txt_perPrice"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_perPrice"
                android:text="2000"
                android:textColor="#000"
                android:padding="2dp"
                android:id="@+id/txt_perAfterPrice"
                />

            <TextView
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:text=" 50% off "
                android:textColor="#fff"
                android:textSize="11dp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/txt_t"
                android:id="@+id/txt_saleTag"
                android:layout_below="@+id/l1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text=" Shipping Cost "
                android:layout_alignParentRight="true"
                android:textSize="11dp"
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:id="@+id/txt_shipingCost"
                android:layout_below="@+id/l1"
                />


            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="15dp"
                android:layout_margin="8dp"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/img_products"
                android:id="@+id/btn_cart"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:layout_below="@+id/txt_perAfterPrice"
                android:text="Descrition"
                android:padding="5dp"
                android:textSize="16dp"
                />



        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:background="#F16636"
        android:drawablePadding="5dp"
        android:text=" Add To Cart "
        android:textAllCaps="false"
        android:textColor="#fff"

        />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@id/btn_add"
        android:layout_marginBottom="5dp"
        android:background="#F16636"
        android:drawablePadding="5dp"
        android:text="Back To Shop"
        android:textAllCaps="false"
        android:textColor="#fff"

        />
</RelativeLayout>